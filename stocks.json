    "paths": {
        "/stock/real-time-price/{ticker}": {
            "get": {
                "summary": "",
                "description": "Get a real time price for the stock",
                "parameters": [
                    {
                        "name": "ticker",
                        "in": "path",
                        "required": true,
                        "description": "The stock ticker name",
                        "schema": {
                            "type": "string",
                            "default": "AAPL"
                        }
                    }
                ],
                "operationId": "getRealTimePriceByTicker",
                "responses": {
                    "default": {
                        "description": "Default response"
                    }
                },
                "tags":
                    ["stocks"]
            },
            "description": "Relates to ticker paths"
        },
        "/company/stock/list": {
            "get": {
                "summary": "",
                "description": "Get a list of all stocks",
                "operationId": "getTickers",
                "responses": {
                    "default": {
                        "description": "Default response"
                    }
                },
                "tags":
                    ["stocks"]
            }
        }
    },
    "components": {
        "schemas": {
            "ApiResponse": {
                "type": "object",
                "properties": {
                    "code": {
                        "type": "integer",
                        "format": "int32"
                    },
                    "type": {
                        "type": "string"
                    },
                    "message": {
                        "type": "string"
                    }
                }
            }
        },
